<div class='displayBox row'>
    <div class='s12'>
        <h1>Eat da Burger!</h1>
        <form class='create-form'>
            <h3><i class="far fa-clipboard fa-2x"> Order a burger</i></h3>
            <div class="form-group">
                <input type="text" id="bb" name="name" placeholder="Burger name goes here!">
                <button class="btn waves-effect waves-light btn-large" type="submit" name="action">Submit Order</button>
            </div>
        </form>    
    </div>
</div>
<div class="col s6 orderedContainer">
      <div class="orderedBox">
        <h2>Ordered Burgers</h2>
        <ul>
          {{#each burgerdb}}
          {{#unless devoured}}
          {{> b/b-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col s6 orderAgainContainer">

      <div class="ordergainbox">
        <h2>Do you want to order again?</h2>
        <ul>
          {{#each burgerdb}}
          {{#if devoured}}
          {{> b/b-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
